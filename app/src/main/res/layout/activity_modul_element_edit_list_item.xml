<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_list_row"
    android:id="@+id/ll_modul_element_edit_list_item">
    <ImageView
        android:id="@+id/iv_modul_element_edit_list_handle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="center_vertical|left"
        android:scaleType="center"
        android:src="@drawable/ic_reorder_black_24dp" />
    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/tv_modul_element_edit_list_item_title"
        android:layout_width="0dp"
        android:layout_weight="8"
        android:textSize="24sp"
        android:maxLines="1"
        android:ellipsize="end"
        />
    <EditText
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:id="@+id/et_modul_element_edit_list_item_times_multiplied"
        android:inputType="number"
        android:textSize="24sp"
        />
    <Spinner
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:id="@+id/s_modul_element_edit_list_item_mutliplier_type"
        />

</LinearLayout>