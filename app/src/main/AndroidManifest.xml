<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.letsgo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.AddModulRatingActivity"></activity>
        <activity android:name=".Activities.BaseNavDrawActivity" />
        <activity
            android:name=".Activities.DoActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".Activities.UserCreationActivity" />
        <activity android:name=".Activities.ModulDetailActivity" />
        <activity
            android:name=".Activities.ModulEditActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".Activities.ModulListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.ElementListActivity" />
        <activity android:name=".Activities.ElementDetailActivity" />
        <activity
            android:name=".Activities.ElementEditActivity"
            android:windowSoftInputMode="adjustPan"/>
    </application>

</manifest>