<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:id="@+id/ll_modul_detail_modulelement_list_item">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_modul_detail_modulelement_picture"
        android:layout_width="@dimen/element_thumbnail_dimens"
        android:layout_height="@dimen/element_thumbnail_dimens"
        app:cardCornerRadius="25dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:visibility="invisible">

        <ImageView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/iv_modul_detail_modulelement_picture"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible">
        </ImageView>
    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/pb_modul_detail_modulelement_picture_load"
        android:layout_width="@dimen/element_thumbnail_dimens"
        android:layout_height="@dimen/element_thumbnail_dimens"
        android:layout_marginEnd="5dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_modul_detail_modulelement_title"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:textSize="24sp"
        android:gravity="center_vertical"
        android:text="Pushups"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginEnd="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_modul_detail_modulelement_times_multiplied"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:textSize="18sp"
            android:text="100"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_modul_detail_modulelement_multiplier_type"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:textSize="18sp"
            android:text="Times"/>

    </LinearLayout>



</LinearLayout>