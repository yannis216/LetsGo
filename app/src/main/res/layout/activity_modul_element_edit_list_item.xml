<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_modul_element_edit_list_item">
    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/tv_modul_element_edit_list_item_title"
        android:layout_width="0dp"
        android:layout_weight="6"
        android:textSize="24sp"
        android:maxLines="6"
        />
    <EditText
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/et_modul_element_edit_list_item_times_multiplied"
        android:inputType="number"
        android:textSize="24sp"
        />
    <Spinner
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:id="@+id/s_modul_element_edit_list_item_mutliplier_type"
        />

</LinearLayout>